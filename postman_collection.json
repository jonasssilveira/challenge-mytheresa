{
	"info": {
		"_postman_id": "go-hiring-challenge-collection",
		"name": "Go Hiring Challenge - Product Catalog API",
		"description": "API endpoints for the Go Hiring Challenge product catalog system",
		"schema": "https:"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http:",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Catalog",
			"item": [
				{
					"name": "Get All Products",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/catalog",
							"host": ["{{base_url}}"],
							"path": ["catalog"]
						},
						"description": "Retrieve all products with their categories and variants. Returns paginated results with total count."
					},
					"response": []
				},
				{
					"name": "Get All Products with Pagination",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/catalog?offset=0&limit=10",
							"host": ["{{base_url}}"],
							"path": ["catalog"],
							"query": [
								{
									"key": "offset",
									"value": "0",
									"description": "Number of items to skip (default: 0)"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Number of items to return (default: 10, min: 1, max: 100)"
								}
							]
						},
						"description": "Get products with pagination. Offset specifies how many items to skip, limit specifies how many to return."
					},
					"response": []
				},
				{
					"name": "Filter Products by Category",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/catalog?category=clothing",
							"host": ["{{base_url}}"],
							"path": ["catalog"],
							"query": [
								{
									"key": "category",
									"value": "clothing",
									"description": "Filter by category code (e.g., clothing, shoes, accessories)"
								}
							]
						},
						"description": "Filter products by category code. Returns only products in the specified category."
					},
					"response": []
				},
				{
					"name": "Filter Products by Price",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/catalog?priceLessThan=50",
							"host": ["{{base_url}}"],
							"path": ["catalog"],
							"query": [
								{
									"key": "priceLessThan",
									"value": "50",
									"description": "Filter products with price less than specified value"
								}
							]
						},
						"description": "Filter products by price. Returns only products with price less than the specified value."
					},
					"response": []
				},
				{
					"name": "Filter Products - Combined Filters",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/catalog?category=clothing&priceLessThan=100&offset=0&limit=5",
							"host": ["{{base_url}}"],
							"path": ["catalog"],
							"query": [
								{
									"key": "category",
									"value": "clothing",
									"description": "Filter by category code"
								},
								{
									"key": "priceLessThan",
									"value": "100",
									"description": "Maximum price filter"
								},
								{
									"key": "offset",
									"value": "0",
									"description": "Pagination offset"
								},
								{
									"key": "limit",
									"value": "5",
									"description": "Items per page"
								}
							]
						},
						"description": "Combine multiple filters: category, price, and pagination. All filters can be used together."
					},
					"response": []
				},
				{
					"name": "Get Product by Code",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/catalog/PROD001",
							"host": ["{{base_url}}"],
							"path": ["catalog", "PROD001"]
						},
						"description": "Retrieve a specific product by its code. Returns product details including category and variants. Variants with no price inherit the product's base price."
					},
					"response": []
				},
				{
					"name": "Get Product by Code - PROD002",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/catalog/PROD002",
							"host": ["{{base_url}}"],
							"path": ["catalog", "PROD002"]
						},
						"description": "Example: Get product PROD002"
					},
					"response": []
				}
			],
			"description": "Product catalog endpoints for browsing and searching products"
		},
